<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="List of Users" resizable="true">
		<Table id="isUserList" inset="false" items="{path: '/FLPLogInSet', sorter: {path: 'LastLoginAt',descending: true}}">
			<columns>
				<Column>
					<Text text="User"/>
				</Column>
				<Column>
					<Text text="Last Login"/>
				</Column>
				<Column>
					<Text text="Browser"/>
				</Column>
				<Column>
					<Text text="Device Type"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{UserID}"/>
						<Text
							text="{ path: 'LastLoginAt', type: 'sap.ui.model.type.DateTime', formatOptions: { source: { pattern: 'yyyyMMddTHHmmss' }, style: 'long', UTC: false }}"/>
						<Text text="{Browser}"/>
						<Text text="{DeviceType}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<endButton>
			<Button text="Cancel" press="onCloseDialog" ></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>